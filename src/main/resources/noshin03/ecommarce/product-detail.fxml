<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="noshin03.ecommarce.controller.ProductController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-padding: 20;">

    <HBox spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20">
        <!-- Product Image -->
        <ImageView fx:id="productImage" fitWidth="200" fitHeight="200" />

        <VBox spacing="10">
            <!-- Product Title -->
            <Label fx:id="productName" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <!-- Price -->
            <Label fx:id="productPrice" style="-fx-font-size: 16px; -fx-text-fill: green;" />

            <!-- Description -->
            <TextArea fx:id="productDescription" editable="false" wrapText="true" prefRowCount="3" />

            <!-- Quantity Selector -->
            <HBox spacing="5">
                <Label text="Quantity:" />
                <Spinner fx:id="quantitySpinner" prefWidth="80" />
            </HBox>

            <!-- Add to Cart Button -->
            <Button text="Add to Cart" onAction="#handleAddToCart" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        </VBox>
    </HBox>
</AnchorPane>
